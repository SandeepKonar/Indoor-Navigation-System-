<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RouteOptionsActivity">
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:layout_centerHorizontal="true"
        android:text="Route Name"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="10dp"
        android:id="@+id/route_name"
        android:layout_marginVertical="200dp"
        />
    <Button
        android:layout_marginTop="10dp"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:textColor="#ffff"
        android:background="@drawable/get_started_background"
        android:text="Start Navigation"
        android:id="@+id/startNavButton"
        android:layout_below="@+id/route_name"
        android:layout_marginStart="55dp"
        android:layout_centerHorizontal="true"

        />
    <Button
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="delete"
        android:id="@+id/deleteRouteButton"
        android:layout_below="@+id/startNavButton"
        android:layout_marginStart="55dp"
        android:visibility="gone"
        />
    <Button
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Redo"
        android:id="@+id/RedoRouteButton"
        android:layout_below="@+id/startNavButton"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        />
    <Button
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Approve"
        android:id="@+id/approveRouteButton"
        android:layout_below="@+id/startNavButton"
        android:layout_marginStart="255dp"
        android:visibility="gone"
        />

</RelativeLayout>