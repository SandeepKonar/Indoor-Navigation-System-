<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreatePath"
    android:id="@+id/createPathRootRelativeLayout">

    <fragment android:name="com.google.ar.sceneform.ux.ArFragment"
        android:id="@+id/createPathArfragment"
        android:layout_width="match_parent"
        android:layout_height="500dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createPathArfragment"
        android:id="@+id/pathName"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pathName"
        android:id="@+id/createPathInfo"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:text=""
        android:textSize="25dp"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:useCompatPadding="true"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/ic_baseline_add_24"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="300dp"
        app:fabSize="normal"
        android:layout_marginEnd="25dp"

        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/stopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:useCompatPadding="true"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/ic_outline_close_24"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="300dp"
        app:fabSize="normal"
        android:visibility="gone"
        android:layout_marginEnd="25dp"
        />
</RelativeLayout>